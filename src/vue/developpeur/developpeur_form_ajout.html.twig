<div class="modal" id="modal-form-ajout" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form action="index.php?page=developpeurajout" method="post" enctype="application/x-www-form-urlencoded"> <!-- (à modifier en fonction de la page) -->
                <div class="modal-header">
                    <h5 class="modal-title">Création d'un profil développeur</h5> <!-- Titre du popup d'ajout (à modifier en fonction de la page) -->
                </div>
                <div class="modal-body"> <!-- Entrée du formulaire -->
                    {% if infos_page.message_invalid_ajout is defined %}
                    <div class="alert alert-danger" role="alert">
                        {{ infos_page.message_invalid_ajout }} <!-- affichage du message d'erreur -->
                    </div>
                    {% endif %}

                    <!-- (à modifier en fonction de la page) -->

                    <div class="form-group"> <!-- Entrée du libellé -->
                        <label for="emailUser">Pour l'utilisateur:</label>
                        <select id="emailUser" name="inputEmailUtilisateur" class="form-control" required>
                        {% for u in liste_utilisateur %}
                            <option value="{{ u.email }}">{{ u.nom }} {{ u.prenom }}</option>  
                        {% endfor %}
                        </select>
                    </div>

                    <hr>

                    <div class="form-group"> <!-- Entrée du libellé -->
                        <label for="telephone">Téléphone professionel</label>
                        <input id="telephone" name="inputTelephone" type="tel" pattern="[0-9]{2} [0-9]{2} [0-9]{2} [0-9]{2} [0-9]{2}" class="form-control" placeholder="Téléphone" required>
                        <small class="ml-2 form-text text-muted">ex: 06 12 34 56 78</small>
                    </div>

                    <div class="form-group"> <!-- Entrée du libellé -->
                        <label for="remuneration">Remunération</label>
                        <select id="remuneration" name="inputIdRemuneration" class="form-control" required>
                        {% for u in liste_remuneration %}
                            <option value="{{ u.id }}">{{ u.coutHoraire }}</option>  
                        {% endfor %}
                        </select>
                    </div>

                </div>
                <div class="modal-footer">
                    <button name="btAjouter" type="submit" class="btn btn-purple">Ajouter</button> <!-- Validation du formulaire -->
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Annuler</button> <!-- Annulation du formulaire -->
                </div>
            </form>
        </div>
    </div>
</div>


{% if infos_page.message_invalid_ajout is defined %} 
<script>
    $(document).ready(function(){
        $("#modal-form-ajout").modal("show");
    });
</script>
{% endif %}