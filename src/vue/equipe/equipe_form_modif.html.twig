<div class="modal" id="modal-modif" tabindex="-1"> <!-- Modal id: modal-modif -->
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="modal-modif-form" method="post" enctype="application/x-www-form-urlencoded">  <!-- Modal form id: modal-modif-form -->
                <div class="modal-header">
                    <h5 class="modal-title">Modification d'une equipe</h5>
                </div>
                <div class="modal-body">
                    <div id="modal-modif-message" class="alert alert-danger"> <!-- Modal message id: modal-modif-message -->
                    </div>

                    <input id="modif-id" name="id" type="hidden"/>  <!-- id champ id: modif-id -->

                    <div class="form-group"> <!-- id champ libelle: modif-libelle -->
                        <label for="modif-libelle">Libellé</label>
                        <input id="modif-libelle" name="inputLibelle" type="text" class="form-control" placeholder="Libellé" required/>
                    </div>

                    <div class="form-group"> <!-- id champ responsable: modif-responsable -->
                        <label for="modif-responsable">Responsable</label>
                        <select id="modif-responsable" name="inputIdResponsable" class="form-control" required/>
                            <option value="non">Responsable non identifié</option> 
                        {% for u in liste_developpeur %}
                            <option value="{{ u.id }}">{{ u.nom }} {{ u.prenom }}</option>
                        {% endfor %}    
                        </select>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-purple">Modifier</button>
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Annuler</button>
                </div>
            </form>
        </div>
    </div>
</div>