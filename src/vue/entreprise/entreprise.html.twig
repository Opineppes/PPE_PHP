{% extends "base.html.twig" %}

{% block title %} 
    {{ parent() }} - Gestion des Entreprise
{% endblock %}

{% block scripts %}
    <script src="js/script_entreprise.js"></script>
{% endblock %}

{% block contenu %}

    {% include 'entreprise/entreprise_form_ajout.html.twig' with {'infos_page': infos_page} %} <!-- ajout du formulaire d'ajout (à modifier en fonction de la page) -->
    {% include 'entreprise/entreprise_form_modif.html.twig' with {'infos_page': infos_page} %} <!-- ajout du formulaire de modification (à modifier en fonction de la page) -->

    {% if infos_page.popup_message %}
        {% include 'popup.html.twig' with {'message': infos_page.popup_message, 'type': infos_page.popup_type} %} <!-- Message de succes en cas de suppression reussi -->
    {% endif %}

    <h1 id="hello-page-message" class="mb-3">Gestion des entreprises </h1> <!-- Titre en gros sur la page (à modifier en fonction de la page) -->
    <div class="card">
        <div class="card-header bg-purple">
            <div class="row">
                <div class="col-sm-6">Liste des entreprises</div> <!-- Titre de la liste (à modifier en fonction de la page) -->
                <div class="col-sm-6 text-right">
                    <a class="white" data-toggle="modal" data-target="#modal-form-ajout" href="#">Ajouter une entreprise</a> <!-- Bouton d'ajout (à modifier en fonction de la page) -->
                </div> 
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr> <!-- Liste des titre des champs (à modifier en fonction de la page) -->
                        <th>libelle</th><th>Adresse</th><th>Code Postal</th><th>Ville</th><th>Nom du Contact</th><th></th><th></th><th></th>
                    </tr>
                </thead>
                <tbody id="table-entreprise">
                </tbody> 
            </table>
        </div>
    </div>

{% endblock %}